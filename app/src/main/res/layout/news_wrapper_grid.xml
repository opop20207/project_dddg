<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/news_item_img_grid"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/news_item_title_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="제목"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/news_item_img_grid"
        app:layout_constraintStart_toStartOf="@+id/news_item_img_grid"
        app:layout_constraintTop_toBottomOf="@+id/news_item_img_grid" />

    <TextView
        android:id="@+id/news_item_info_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="정보"
        app:layout_constraintEnd_toEndOf="@+id/news_item_img_grid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/news_item_img_grid"
        app:layout_constraintTop_toBottomOf="@+id/news_item_title_grid" />

    <TextView
        android:id="@+id/news_item_context_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="내용"
        app:layout_constraintEnd_toEndOf="@+id/news_item_img_grid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/news_item_img_grid"
        app:layout_constraintTop_toBottomOf="@+id/news_item_info_grid" />
</androidx.constraintlayout.widget.ConstraintLayout>