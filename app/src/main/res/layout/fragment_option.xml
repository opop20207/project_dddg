<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:background="@color/subDarkBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="커뮤니티"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="PROFILE"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout4" />

        <ImageView
            android:id="@+id/imgprofile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="@+id/tvprofile"
            app:layout_constraintTop_toBottomOf="@+id/tvprofile" />

        <TextView
            android:id="@+id/tvrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="RANK"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/imgprofile"
            app:layout_constraintTop_toTopOf="@+id/imgprofile" />

        <TextView
            android:id="@+id/tvscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="SCORE"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgprofile"
            app:layout_constraintStart_toStartOf="@+id/tvrank" />

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="NAME"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/imgprofile"
            app:layout_constraintStart_toStartOf="@+id/imgprofile"
            app:layout_constraintTop_toBottomOf="@+id/imgprofile" />

        <TextView
            android:id="@+id/tvleaderboards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="LEADERBOARDS"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvprofile"
            app:layout_constraintTop_toBottomOf="@+id/tvname" />

        <ListView
            android:id="@+id/lvleaderboards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/imgprofile"
            app:layout_constraintTop_toBottomOf="@id/tvleaderboards" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="ACTIVITYS"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvprofile"
            app:layout_constraintTop_toBottomOf="@id/lvleaderboards" />

        <ListView
            android:id="@+id/lvactivitys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/imgprofile"
            app:layout_constraintTop_toBottomOf="@id/lvactivitys" />


        <Button
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/option"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
