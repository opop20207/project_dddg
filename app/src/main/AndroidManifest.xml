<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dddg.project_dddg">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/penguin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MatchDetailInfo" />
        <activity android:name=".auth.FirebaseUiActivity" />
        <activity android:name=".auth.SignedinActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FreeboardNewContent"/>
        <activity android:name=".FragmentFrame" />
        <activity android:name=".FreeboardOpenContent"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>